# Syntactical Rules

program
    : expr ( ';' expr )* ';'?

expr
    : expr ( COMP_OP expr )+          # Compares
    : expr ( '+' | '-' ) expr         # Terms
    | expr ( '*' | '/' | '%' ) expr   # Factors
    | '-' expr                        # Negation
    | expr '^' expr                   # Exponents
    | '(' expr ')'                    # Parenthesis
    | IDENT                           # Identifiers
    | NUM | 'true' | 'false'          # Literals

# Lexical Rules

COMP_OP : '<' | '>' | '<=' | '>=' | '==' | '!='

IDENT   : '_'
NUM     : [0-9]+ ( '.' [0-9]+ )?
BLANKS  : [ \t\v\f\r\n]+ -> ignored
